{{ navigation.setMenu() }}
<div class="header-navigation">
    <div class="container">
        <div class="quick-access">
            <div class="row">
                <div class="col-md-3 col-sm-2 col-xs-2">
                    <div class="navleft-container visible-lg visible-md">
                        <div id="pt_vmegamenu" class="pt_vmegamenu">
                            <div class="title-vmega-menu">
                                <h2>{{ navigation.getMainMenuProduct() | raw }}</h2>
                            </div>
                            <div class="category-vmega_toggle">
                                {{ navigation.getMenuProductsLayout() | raw  }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-8  col-xs-8">
                    <div class="nav-container visible-lg visible-md">
                        <div class="pt_custommenu">
                            <div class="pt_menu">
                                <div class="parentMenu">
                                    <ul>
                                        {{ navigation.getMenuCmsLayout() | raw }}
                                        {{ navigation.getMenuBlogLayout() | raw }}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-xs-1 navbar-button">
                    <button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xs-12 collapse navigation-responsive" id="navbar" style="background: #FFFFFF; position: absolute; z-index: 10050;">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ navigation.getMainMenuProduct() }} <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {{ navigation.getMenuProductsResponsive() | raw }}
                            </ul>
                            {{ navigation.getMenuCmsResponsive() | raw }}
                            {{ navigation.getMenuBlogResponsive() | raw }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>