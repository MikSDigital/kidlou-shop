{% extends 'admin/base_login.html.twig' %}
{% block title %} Login {% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block pagetitle %}{{ 'Login' | trans }}{% endblock %}
{% block body %}
    <section class="box info admin">
        <div class="ym-grid linearize-level-1">
            <div class="container">
                <div class="row">
                    <div class='col-md-3'></div>
                    <div class="col-md-6">
                        <div class="login-box well">
                            <form action="{{ path('admin_login') }}"  method="post">
                                <legend>{{ 'Sign In' | trans }}</legend>
                                {% if error %}
                                    <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="username">{{ 'E-mail or Username' | trans }}</label>
                                    <input value='' id="username" name="_username" placeholder="{{ 'E-mail or Username' | trans }}" type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="password">{{ 'Password' | trans }}</label>
                                    <input id="password" value='' name="_password" placeholder="{{ 'Password' | trans }}" type="password" class="form-control" />
                                </div>
                                <!--
                                <div class="input-group">
                                    <div class="checkbox">
                                        <label>
                                            <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                        </label>
                                    </div>
                                </div>
                                -->
                                <div class="form-group">
                                    <input type="submit" class="btn btn-default btn-login-submit btn-block m-t-md" value="{{ 'Login' | trans }}" />
                                </div>
                                <!--
                                <span class='text-center'><a href="/resetting/request" class="text-sm">{{ 'Forgot Password?' | trans }}</a></span>
                                <div class="form-group">
                                    <p class="text-center m-t-xs text-sm">Do not have an account?</p>
                                    <a href="/register/" class="btn btn-default btn-block m-t-md">Create an account</a>
                                </div>
                                -->
                            </form>
                        </div>
                    </div>
                    <div class='col-md-3'></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


