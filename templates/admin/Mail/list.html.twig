{% extends 'admin/base.html.twig' %}

{% block title %} Admin Area {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="/css/jquery.contextMenu.css" rel="stylesheet" />
    <link href="/css/jquery-ui.css" rel="stylesheet" />
{% endblock %}
{% block pagetitle %}{{ 'Admin Mail' | trans }}{% endblock %}
{% block body %}
    <section class="box info admin">
        <div class="col-md-12" style="padding-right: 0;"><button class="btn btn-default admin-element-right admin-element-bottom" onclick="location.href = '{{ path("admin_mail_detail_new") }}';" >{{ 'New Item' | trans }}</button></div>
        <table class="table table-hover table-bordered table-admin">
            <thead>
                <tr class="edit">
                    <td>{{ 'Id' | trans }}</a></td>
                    <td class="a-left">{{ 'From email' | trans }}</a></td>
                    <td class="a-left">{{ 'From name' | trans }}</a></td>
                    <td class="a-left">{{ 'Bcc email' | trans }}</a></td>
                    <td class="a-left">{{ 'Type' | trans }}</a></td>
                    <td class="a-left">{{ 'Status' | trans }}</a></td>
                </tr>
            </thead>
            <tbody>
                {% for mail in mails %}
                    <tr class="edit">
                        <td><a href="{{ path('admin_mail_detail' , {'id': mail.id} )}}">{{ mail.id }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_mail_detail' , {'id': mail.id} )}}">{{ mail.fromEmail }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_mail_detail' , {'id': mail.id} )}}">{{ mail.fromName }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_mail_detail' , {'id': mail.id} )}}">{{ mail.bccEmail }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_mail_detail' , {'id': mail.id} )}}">{{ mail.type }}</a></td>
                        <td class="a-left">{% if mail.status == 0 %}Inactive{% else %}Active{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
