{% extends 'admin/base.html.twig' %}

{% block title %} Admin Area {% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block pagetitle %}{{ 'Nivo-Slider language items' | trans }}{% endblock %}
{% block body %}
    <section class="box info admin">
        <table class="table table-hover table-bordered table-admin">
            <tbody>
                {% for nivoslider in nivosliders %}
                    <tr class="edit">
                        <td><a href="{{ path('admin_slider_item_nivo_id' , {'id': nivoslider.id}) }}">{{ nivoslider.id }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_slider_item_nivo_id' , {'id': nivoslider.id}) }}">{{ nivoslider.title }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_slider_item_nivo_id' , {'id': nivoslider.id}) }}">{{ nivoslider.title2 }}</a></td>
                        <td class="a-left"><a href="{{ path('admin_slider_item_nivo_id' , {'id': nivoslider.id}) }}">{{ nivoslider.lang.name }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
