                <div class="admin-info-box"><div class="titel">{{ 'Backend Users' | trans }}</div><a href="{{ path('admin_user_list') }}"><i class="fa fa-address-card" aria-hidden="true"></i></a></div>
            </div>
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Sliders' | trans }}</div><a href="{{ path('admin_slider_index') }}"><i class="fa fa-sliders" aria-hidden="true"></i></a></div>
            </div>
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Payments' | trans }}</div><a href="{{ path('admin_payment_index') }}"><i class="fa fa-credit-card" aria-hidden="true"></i></a></div>
