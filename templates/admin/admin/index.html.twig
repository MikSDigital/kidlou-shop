                <div class="admin-info-box"><div class="titel">{{ 'Gift' | trans }}</div><a href="{{ path('admin_gift_list') }}"><i class="fa fa fa-gift" aria-hidden="true"></i></a></div>
            </div>
        </div>
    </section>
{% endblock %}
