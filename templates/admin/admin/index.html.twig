    <section class="box info admin">
        <div class="ym-grid linearize-level-1">
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Products' | trans }}</div><a href="{{ path('admin_product_list') }}"><i class="fa fa-product-hunt" aria-hidden="true"></i></a></div>
            </div>
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'CMS' | trans }}</div><a href="{{ path('admin_cms_index') }}"><i class="fa fa-file-text" aria-hidden="true"></i></a></div>
            </div>
