{% extends 'admin/base.html.twig' %}

{% block title %} Admin Area {% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block pagetitle %}{{ 'Payment Area' | trans }}{% endblock %}
{% block body %}
    <section class="box info admin">
        <div class="ym-grid linearize-level-1">
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Payments' | trans }}</div><a href="{{ path('admin_payment_list') }}"><i class="fa fa-product-hunt" aria-hidden="true"></i></a></div>
            </div>
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Caution cost' | trans }}</div><a href="{{ path('admin_payment_caution') }}"><i class="fa fa-money" aria-hidden="true"></i></a></div>
            </div>
            <div class="col-md-4">
                <div class="admin-info-box"><div class="titel">{{ 'Shipping cost' | trans }}</div><a href="{{ path('admin_payment_shipping_list') }}"><i class="fa fa-ship" aria-hidden="true"></i></a></div>
            </div>
        </div>
    </section>
{% endblock %}
