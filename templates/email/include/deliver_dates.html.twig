        <td class="mcnTextContent" style="padding-right: 0px; padding-left: 0px; padding-top: 0; padding-bottom: 0; text-align:left;" valign="top" colspan="2"><b>{{ 'Lieferung' | trans }}:</b></td>
    </tr>
    {% for data,items in order.item_data %}
        <tr>
            <td class="mcnTextContent" style="width: 100px; padding-right: 9px; padding-left: 0px; padding-top: 0; padding-bottom: 0; text-align:left;" valign="top">
                {{ data }}
            </td>
            <td class="mcnTextContent" style="padding-right: 0px; padding-left: 9px; padding-top: 0; padding-bottom: 0; text-align:left;" valign="top">
                {% for item in items %}
                    {{ item.name }} ({{ item.sku }}) <br />
                    {% if item.children is defined %}
                        {% for child in item.children %}
                            <span style="font-style: italic;">{{ child.name }} ({{ child.sku }})</span><br />
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
